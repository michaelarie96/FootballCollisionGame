<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.HW1_208388124" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSecondaryVariant">@android:color/black</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@android:color/black</item>

        <!-- Action bar styling -->
        <item name="actionBarStyle">@style/Widget.App.ActionBar</item>

        <!-- Window background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Dialog theme -->
        <item name="materialAlertDialogTheme">@style/BlackWhiteDialog</item>
    </style>

    <!-- Custom ActionBar style -->
    <style name="Widget.App.ActionBar" parent="Widget.MaterialComponents.ActionBar.Surface">
        <item name="background">@android:color/black</item>
        <item name="titleTextStyle">@style/TextAppearance.App.ActionBar.Title</item>
        <item name="android:gravity">start</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <!-- ActionBar title text style -->
    <style name="TextAppearance.App.ActionBar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- Dialog theme -->
    <style name="BlackWhiteDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">85%</item>
        <item name="materialAlertDialogTitleTextStyle">@style/BlackWhiteDialogTitleText</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BlackWhiteDialogBodyText</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="BlackWhiteDialogTitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BlackWhiteDialogBodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>